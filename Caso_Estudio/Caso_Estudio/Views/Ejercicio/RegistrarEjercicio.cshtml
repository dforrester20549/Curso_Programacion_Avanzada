@model Caso_Estudio.Entidad.Ejercicios

@{
    ViewData["Title"] = "RegistrarEjercicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Ejercicio</h2>


<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center" style="margin-top:5%">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-2">
                    <!-- Nested Row within Card Body -->
                    <div class="row justify-content-center">
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <h3 class="h4 text-gray-900 mb-4">Registrar Ejercicio</h3>
                                </div>

                                @if (ViewBag.MsjPantalla != null)
                                {
                                    <div class="alert alert-warning" role="alert" style="text-align:center">
                                        @ViewBag.MsjPantalla
                                    </div>
                                }

                                @using (Html.BeginForm("RegistrarEjercicio", "Ejercicios"))
                                {
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-user", @placeholder = "Nombre", @required = "true" })
                                    </div>

                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Monto, new { @class = "form-control form-control-user", @placeholder = "Monto", @required = "true" })
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="TipoEjercicio">Tipo de Ejercicio:</label>
                                        <select asp-for="TipoEjercicio" class="form-control" asp-items="ViewBag.TipoEjercicio"></select>
                                    </div>
                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Procesar">
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
