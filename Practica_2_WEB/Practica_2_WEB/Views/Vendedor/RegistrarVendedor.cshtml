@model Practica_2_WEB.Entities.Vendedor

@{
    ViewData["Title"] = "RegistrarVendedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Vendedor</h2>


<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center" style="margin-top:5%">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-2">
                    <!-- Nested Row within Card Body -->
                    <div class="row justify-content-center">
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <h3 class="h4 text-gray-900 mb-4">Registrar Vendedor</h3>
                                </div>

                                @if (ViewBag.MsjPantalla != null)
                                {
                                    <div class="alert alert-warning" role="alert" style="text-align:center">
                                        @ViewBag.MsjPantalla
                                    </div>
                                }

                                @using (Html.BeginForm("RegistrarVendedor", "Vendedor"))
                                {
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control form-control-user", @placeholder = "Cedula", @onkeyup = "ConsultarCedula()", @required = "true" })
                                    </div>

                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-user", @placeholder = "Nombre", @required = "true" })
                                    </div>

                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control form-control-user", @placeholder = "Correo", @type = "Email", @required = "true" })
                                    </div>

                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Procesar">
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>