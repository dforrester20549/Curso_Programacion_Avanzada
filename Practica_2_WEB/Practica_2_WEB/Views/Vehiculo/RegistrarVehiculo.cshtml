@model Practica_2_WEB.Entities.Vehiculo

@{
    ViewData["Title"] = "RegistrarVehiculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Vehiculo</h2>


<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center" style="margin-top:5%">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-2">
                    <!-- Nested Row within Card Body -->
                    <div class="row justify-content-center">
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <h3 class="h4 text-gray-900 mb-4">Registrar Vehiculo</h3>
                                </div>

                                @if (ViewBag.MsjPantalla != null)
                                {
                                    <div class="alert alert-warning" role="alert" style="text-align:center">
                                        @ViewBag.MsjPantalla
                                    </div>
                                }

                                @using (Html.BeginForm("RegistrarVehiculo", "Vehiculo"))
                                {
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Marca, new { @class = "form-control form-control-user", @placeholder = "Marca", @required = "true" })
                                    </div>

                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Modelo, new { @class = "form-control form-control-user", @placeholder = "Modelo", @required = "true" })
                                    </div>

                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Color, new { @class = "form-control form-control-user", @placeholder = "Color", @required = "true" })
                                    </div>

                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Precio, new { @class = "form-control form-control-user", @placeholder = "Precio", @required = "true" })
                                    </div>

                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.IdVendedor, new { @class = "form-control form-control-user", @placeholder = "Vendedor", @required = "true" })
                                    </div>

                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Procesar">
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
